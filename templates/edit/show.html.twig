{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}

    <h1>Blog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ blog.content }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ blog.date ? blog.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ blog.author }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ blog.image }}</td>
            </tr>
        </tbody>
    </table>

    <a type="button" class="btn btn-info" href="{{ path('edit_index') }}">back to list</a>

    <a  type="button" class="btn btn-secondary" href="{{ path('edit_edit', {'id': blog.id}) }}">edit</a>

    {{ include('edit/_delete_form.html.twig') }}
{% endblock %}
