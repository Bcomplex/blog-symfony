{% extends 'base.html.twig' %}
{% block body %}
    {% include('navbar.html.twig') %}
    <h1>Blog</h1>

    {% for post in posts %}

        <h1>{{ post.title }}</h1>
        <h2>{{ post.content  }}</h2>
        <small>{{ post.date|date("d/m/Y")}}</small>
        <h2>{{ post.author }}</h2>
        <a href="{{ path("blog_page",{id : post.id}) }}">Přečíst článek</a>
        <br>
        <br>

    {% endfor %}

{% endblock  %}